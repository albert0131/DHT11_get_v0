<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pm25"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.dht11_get_v0.PM25">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="PM2.5曲線圖"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView10"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="24sp" />

        <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:id="@+id/webView3" />

        <TextView
            android:text="最大PM2.5值 :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pm25Max"
            android:textSize="18sp" />

        <TextView
            android:text="最小PM2.5值 :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pm25Min"
            android:textSize="18sp" />

        <TextView
            android:text="平均PM2.5值"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pm25Avg"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="計算大小平均值"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:onClick="clickCalculate"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:text="返回"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:onClick="clickBack"
                android:layout_weight="1"
                style="@android:style/Widget.Button.Inset" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
